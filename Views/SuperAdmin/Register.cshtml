@model LibaryManagementSystem2.Models.ViewModels.RegisterUserViewModel

@{ ViewBag.Title = "Register"; }

<div class="row justify-content-center">
    <div class="card">
         <img src="/images/std.jpg" style="height: 200px;">
        <div class="card-header">
            <h1 class="text-center">FZ User Registration</h1>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="form-group mb-3">  
                  <input asp-for="FirstName" class="form-control" placeholder="Enter First Name" />
                    <span asp-validation-for="FirstName" class="text-danger"></span><br>
                  <input asp-for="LastName" class="form-control" placeholder="Enter Last Name" />
                    <span asp-validation-for="LastName" class="text-danger"></span><br>
                    <input asp-for="Email" class="form-control" placeholder="Email Address" />
                    <span asp-validation-for="Email" class="text-danger"></span><br>
                    <input type="password" asp-for="Password" class="form-control" placeholder="Create Password" />
                    <span asp-validation-for="Password" class="text-danger"></span><br />
                    <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span><br />
                    <input type="RoleId" asp-for="RoleId" class="form-control" placeholder="Role Id " />
                    <span asp-validation-for="RoleId" class="text-danger"></span><br />
                    @* <input asp-for="RoleId" class="form-control" placeholder="Role Id" />
                    <span asp-validation-for="RoleId" class="text-danger"></span><br> *@
                    
                    <span asp-validation-for="RoleId" class="text-danger"></span><br />
                </div>
                <div class="form-group">
                    <input type="submit" value="submit"class="btn" style="background:blue" />
                    <span class="mr-3">Do you have an account already?<a asp-area="" asp-controller="User" asp-action="Login">Login Here</a></span>
                </div>

            </form>

        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}